<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    tools:context=".activity_details.DetailInformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:background="@drawable/shape_header">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back_button_white"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="Icon Back Button" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Informasi Lomba"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/ic_sicc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/title"
                android:contentDescription="Logo SICC"/>

            <TextView
                android:id="@+id/title_lomba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginTop="10dp"
                android:layout_below="@id/logo_image"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textSize="18sp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="15dp"
            android:layout_below="@id/layout_header"/>

        <TextView
            android:id="@+id/desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:gravity="fill_horizontal"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/welcome_text"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:id="@+id/layout_jenis_lomba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/desc_text">

            <TextView
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:text="Jenis Lomba"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/subTitle_lomba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:fontFamily="@font/poppinsregular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_status_lomba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/layout_jenis_lomba">

            <TextView
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:text="Status Lomba"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/status_lomba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:fontFamily="@font/poppinsregular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tglMulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/layout_status_lomba">

            <TextView
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:text="Tanggal Mulai"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tgl_mulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:fontFamily="@font/poppinsregular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tglSelesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/layout_tglMulai">

            <TextView
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:text="Tanggal Selesai"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tgl_selesai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:fontFamily="@font/poppinsregular"/>

        </LinearLayout>

        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_below="@id/layout_tglSelesai"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Daftar Sekarang !"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>